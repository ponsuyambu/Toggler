<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            >
        <TextView
            android:id="@+id/toggleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text ="Feature A"
            tools:text ="Feature A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResolvedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text ="ON"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/llDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26CCCCCC"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvResolvedValue">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <TextView
                    android:id="@+id/lblValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text ="VALUES"
                    android:textAllCaps="true"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text ="VALUES" />
                <TextView
                    android:id="@+id/lblLocalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text ="Local"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblValues"
                    tools:text ="Local Value"/>
                <Switch
                    android:id="@+id/swithcLocalProvider"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblLocalValue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblValues" />

                <LinearLayout
                    android:id="@+id/llSelectValueContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/lblValues"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/swithcLocalProvider">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvLocalValue"
                        style="@style/ValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="`local value`"/>

                    <TextView
                        android:id="@+id/btnEditLocalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="EDIT"
                        android:textColor="#6B0000FF"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lblFirebaseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text ="Firebase"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblLocalValue"
                    tools:text ="Firebase" />

                <TextView
                    android:id="@+id/tvFirebaseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text ="`value`"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblFirebaseValue"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text ="`value`"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clConfigurations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/lblConfigurations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text ="CONFIGURATION"
                        android:textAllCaps="true"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text ="CONFIGURATION" />

                    <TextView
                        android:id="@+id/lblSharedPreferencesKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text ="Shared Preferences Key"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblConfigurations" />

                    <TextView
                        android:id="@+id/tvSharedPreferencesKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="`value`"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/lblSharedPreferencesKey"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text ="`feature1`"/>

                    <TextView
                        android:id="@+id/lblFirebaseConfigKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text ="Firebase Remote Config Key"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblSharedPreferencesKey" />

                    <TextView
                        android:id="@+id/tvFirebaseConfigKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="`value`"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/lblFirebaseConfigKey"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text ="`feature1`"/>

                    <TextView
                        android:id="@+id/lblDefaultValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text ="Default value"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblFirebaseConfigKey" />

                    <TextView
                        android:id="@+id/tvDefaultValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="`default value`"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/lblDefaultValue"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/lblOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text ="Selection Options"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblDefaultValue" />

                    <TextView
                        android:id="@+id/tvSelectionOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="`default value`"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblOptions"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>